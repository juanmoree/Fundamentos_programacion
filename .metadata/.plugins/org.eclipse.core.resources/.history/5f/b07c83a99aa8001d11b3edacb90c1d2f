package pruebas;

import java.util.*;

public class Pruebas {

	public static void findingRemovingCar(ArrayList<String> list) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Introduce un coche");
		String choose = sc.nextLine();
		int i = 0;
		final int size = list.size();
		while (i < list.size()) {
			if (choose.equalsIgnoreCase(list.get(i))) {
				list.remove(i);
				System.out.println("El coche ha sido vendido");
				System.out.println("Disponibles: " + list);
				i = (size + 1);
			} else
				i++;
		}
		if (i == size) {
			System.out.println("Este coche no esta en venta");
		}
		sc.close();
	}

	public static void main(String[] args) {

		ArrayList<String> cars = new ArrayList<String>();
		cars.add("Bentley");
		cars.add("Ferrari");
		cars.add("Aston Martin");
		cars.add("Bugatti");
		cars.add("Alfa Romeo");
		
		ArrayList<String> bikes = new ArrayList<String>();
		cars.add("Ducati");
		cars.add("Aprilia");
		cars.add("BMW");
		cars.add("Yamaha");
		cars.add("Kawasaki");

		findingRemovingCar(list);
	}
}
