package ex6_2;

import java.util.*;

public class Ex6_2 {

	public static int media(int num) {
		Scanner sc = new Scanner(System.in);
		ArrayList<Integer> ages = new ArrayList();
		int i = 1;
		int res = 0;
		while (i <= num) {
			System.out.println("Introduzca la edad NÂº " + i);
			int age = sc.nextInt();
			if (age >= 0 && age <= 120) {
				ages.add(age);
			} else
				System.out.println("Edad incorrecta");
			i++;
		}
		System.out.println("Las edades introducidas son: " + ages);
		for (int x = 0; x < num; x++) {
			res = (ages.get(x) + res);
		}
		return (res / num);
	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Cuantas edades quieres introducir?");
		int num = sc.nextInt();
		int res = media(num);
		System.out.println("Y la media es: " + res);
	}

}
