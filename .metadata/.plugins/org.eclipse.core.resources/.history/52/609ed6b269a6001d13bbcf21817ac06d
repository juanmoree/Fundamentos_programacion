package extralongs;

import java.util.ArrayList;
import java.util.Scanner;

public class ExtraLongs {

	public static void main(String[] args) {
		System.out.println("Introduzca un numero de mas de 7 cifras");
		Scanner sc = new Scanner(System.in);
		ArrayList<Long> numbers = new ArrayList();
		long num = sc.nextLong();
		long sum = 0;
		if (!(num > 9999999)) {
			while (num > 0) {
			}
			numbers.add(num % 10); // AÃ±ade los numeros de derecha a izquierda
			num /= 10;
			int size = numbers.size() - 1;
			System.out.print("Los numeros pares son: ");
			for (int i = 0; i <= size; size--) {
				if ((numbers.get(size) % 2) == 0) {
					System.out.print(numbers.get(size) + " "); // Obtiene los numeros de derecha a izquierda
					sum = numbers.get(size) + sum;
				}
			}
			System.out.println("\nY la suma de ellos es: " + sum);
		} else
			System.out.println("Numero incorrecto");
	}
}
